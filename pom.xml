<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.beesden</groupId>
    <artifactId>commerce</artifactId>
    <version>${beesden.commerce.version}</version>
    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <beesden.commerce.version>1.0.0</beesden.commerce.version>
        <spring.boot.version>1.4.1.RELEASE</spring.boot.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <hibernate.version>5.0.5.Final</hibernate.version>
        <hibernate.validator.version>5.2.4.Final</hibernate.validator.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.16.10</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <modules>
        <module>commerce-common</module>

        <!-- Service APIs -->
        <module>commerce-shop</module>
        <!--
        <module>content</module>
        <module>search</module>
        <module>reviews</module>
        -->

        <!-- Front end -->
        <module>shop-admin</module>
        <!--
        <module>shopfront</module>
        -->

    </modules>

</project>
